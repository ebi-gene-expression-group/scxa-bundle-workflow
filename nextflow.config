conda {
    cacheDir = "$SCXA_WORKFLOW_ROOT/envs"
    createTimeout = "30 min"
}

process {
    executor='lsf'
    queue='$SCXA_LSF_QUEUE'
    clusterOptions='$SCXA_LSF_OPTIONS'
}

executor {
    queueSize=500
    perJobMemLimit=true
    exitReadTimeout='100000 sec'
    pollInterval = '5sec'
}

params {
    tertiary='no'
    largeMatrixThreshold=25000
    topmarkersForSummary=5
}
